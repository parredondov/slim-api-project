{
    "name": "parredondo/slim-api-project",
    "description": "An API application built with Slim Framework",
    "keywords": ["microframework", "rest", "router", "psr7", "api", "phinx"],
    "homepage": "",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo Arredondo",
            "email": "parredondov91@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1",
        "robmorgan/phinx": "0.5.*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "ApiProject\\": "src/app/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
